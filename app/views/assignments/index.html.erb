<h1>
  <div class="header-buttons">
    <%= link_to '<i class="glyphicon glyphicon-plus"></i> New Assignment'.html_safe,
        new_assignment_path, class: "btn btn-default" %>
  </div>
  Assignments
</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Link</th>
      <th># of Concepts</th>
      <th>Avg Score</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <%= render @assignments %>
  </tbody>
</table>

<%= will_paginate %>
