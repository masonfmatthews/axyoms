<% if @concept %>
  <h3 class="header-buttons">
    <% @concept.units.each do |u| %>
      <%= link_to u.name, edit_unit_path(u),
        class: "label #{u.completed? ? "label-primary" : "label-default"}"%></span>
    <% end %>
    <%= link_to add_link_text("Unit", @concept.units.blank?),
      new_unit_path(concept_uuid: @concept.uuid),
      class: "btn btn-default btn-sm" %>
  </h3>
  <h1 data-toggle="modal" data-target="#myModal"><%= @concept.name %></h1>
  <div class="row">
    <div class="col-md-6" data-toggle="modal" data-target="#myModal">
      <h3>Description</h3>
      <% if @concept.description.blank? %>
       <p class="text-muted">None.</p>
      <% else %>
        <p><%= @concept.description %></p>
      <% end %>
      <button type="button" class="btn btn-default">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit Concept
      </button>
    </div>
    <div class="col-md-6">
      <h3>Assignments</h3>
      <p class="text-muted">None found.</p>
      <h3>References</h3>
      <p class="text-muted">None found.</p>
    </div>
  </div>


  <!-- Modal -->
  <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <%= form_for @concept, remote: true, method: "patch" do |f| %>
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <h4 class="modal-title" id="myModalLabel">Edit Concept</h4>
          </div>
          <div class="modal-body">
            <%= f.hidden_field :uuid %>
            <div class="form-group">
              <%= f.label :name %>
              <%= f.text_field :name, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :description %>
              <%= f.text_area :description, class: "form-control" %>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <%= f.submit "Save Changes", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
