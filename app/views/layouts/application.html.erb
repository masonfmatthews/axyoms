            <li><a href="#">Units</a></li>
            <li><a href="#">Assignments</a></li>
            <li><a href="#">Students</a></li>
            <li><a href="#">Users</a></li>
          </ul>
        </li>
        <li><a href="#">Log Out</a></li>
      </ul>
    </div>
  </div>
</nav>

<svg id="graph"></svg>

<div class="container">
  <%= yield %>
  <% debug(params) if Rails.env.development? %>
</div>

</body>
</html>
